<%= simple_form_for @employee, html: { class: 'form-horizontal' } do |f| %>
  
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone %>
  <%= f.input :status %>
  <%= f.association :post, as: :select %>
  
  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t("helpers.links.cancel"),
                employees_path, 
                class: 'btn' %>
  </div>
<% end %>