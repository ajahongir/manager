<%= simple_form_for @post, html: { class: 'form-horizontal' } do |f| %>
  
  <%= f.input :name %>
  
  <div class="form-actions">
    <%= f.button :submit,  class: 'btn btn-primary' %>
    <%= link_to t("helpers.links.cancel"),
                posts_path, 
                class: 'btn' %>
  </div>
<% end %>
